                android:id="@+id/num2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen10"
                android:text="共享提成:" />

            <TextView
                android:id="@+id/num2_4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen30"
